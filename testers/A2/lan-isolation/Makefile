# Makefile for step1 of testers-a2
CC = gcc

LIBRARY_PATH = ../../../
TESTFILE_PATH = ./test_files/

LAN-A_APP1 = $(LIBRARY_PATH)zcs.c $(LIBRARY_PATH)multicast.c $(TESTFILE_PATH)LAN-A_app1.c
LAN-A_APP2 = $(LIBRARY_PATH)zcs.c $(LIBRARY_PATH)multicast.c $(TESTFILE_PATH)LAN-A_app2.c
LAN-A_SERVICE1 = $(LIBRARY_PATH)zcs.c $(LIBRARY_PATH)multicast.c $(TESTFILE_PATH)LAN-A_service1.c
LAN-A_SERVICE2 = $(LIBRARY_PATH)zcs.c $(LIBRARY_PATH)multicast.c $(TESTFILE_PATH)LAN-A_service2.c
LAN-B_APP1 = $(LIBRARY_PATH)zcs.c $(LIBRARY_PATH)multicast.c $(TESTFILE_PATH)LAN-B_app1.c
LAN-B_APP2 = $(LIBRARY_PATH)zcs.c $(LIBRARY_PATH)multicast.c $(TESTFILE_PATH)LAN-B_app2.c
LAN-B_SERVICE1 = $(LIBRARY_PATH)zcs.c $(LIBRARY_PATH)multicast.c $(TESTFILE_PATH)LAN-B_service1.c
LAN-B_SERVICE2 = $(LIBRARY_PATH)zcs.c $(LIBRARY_PATH)multicast.c $(TESTFILE_PATH)LAN-B_service2.c

LAN-A_APP1_TARGET = LAN-A_app1
LAN-A_APP2_TARGET = LAN-A_app2
LAN-A_SERVICE1_TARGET = LAN-A_service1
LAN-A_SERVICE2_TARGET = LAN-A_service2
LAN-B_APP1_TARGET = LAN-B_app1
LAN-B_APP2_TARGET = LAN-B_app2
LAN-B_SERVICE1_TARGET = LAN-B_service1
LAN-B_SERVICE2_TARGET = LAN-B_service2

all: LAN-A_APP1 LAN-A_APP2 LAN-A_SERVICE1 LAN-A_SERVICE2 LAN-B_APP1 LAN-B_APP2 LAN-B_SERVICE1 LAN-B_SERVICE2

LAN-A_APP1: $(LAN-A_APP1)
	$(CC) $(LAN-A_APP1) -o $(LAN-A_APP1_TARGET)

LAN-A_APP2: $(LAN-A_APP2)
	$(CC) $(LAN-A_APP2) -o $(LAN-A_APP2_TARGET)

LAN-A_SERVICE1: $(LAN-A_SERVICE1)
	$(CC) $(LAN-A_SERVICE1) -o $(LAN-A_SERVICE1_TARGET)

LAN-A_SERVICE2: $(LAN-A_SERVICE2)
	$(CC) $(LAN-A_SERVICE2) -o $(LAN-A_SERVICE2_TARGET)

LAN-B_APP1: $(LAN-B_APP1)
	$(CC) $(LAN-B_APP1) -o $(LAN-B_APP1_TARGET)

LAN-B_APP2: $(LAN-B_APP2)
	$(CC) $(LAN-B_APP2) -o $(LAN-B_APP2_TARGET)

LAN-B_SERVICE1: $(LAN-B_SERVICE1)
	$(CC) $(LAN-B_SERVICE1) -o $(LAN-B_SERVICE1_TARGET)

LAN-B_SERVICE2: $(LAN-B_SERVICE2)
	$(CC) $(LAN-B_SERVICE2) -o $(LAN-B_SERVICE2_TARGET)

clean:
	rm -f $(LAN-A_APP1_TARGET) $(LAN-A_APP2_TARGET) $(LAN-A_SERVICE1_TARGET) $(LAN-A_SERVICE2_TARGET) $(LAN-B_APP1_TARGET) $(LAN-B_APP2_TARGET) $(LAN-B_SERVICE1_TARGET) $(LAN-B_SERVICE2_TARGET)

clean_logs:
	rm -rf ./logs/*